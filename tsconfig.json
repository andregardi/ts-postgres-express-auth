{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./src/types"],
  },
  "include": ["src/**/*", "core/**/*", "drizzle.config.ts", "eslint.config.mjs"],
  "exclude": ["node_modules"]
}
