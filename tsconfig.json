{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["core/*"],
      "@src/*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"],
  },
  "include": ["src/**/*", "core/**/*"],
  "exclude": ["node_modules"]
}
